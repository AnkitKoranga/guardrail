[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ankit.koranga
Group=www-data
WorkingDirectory=/home/ankit.koranga/guardrail
ExecStart=/home/ankit.koranga/guardrail/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          foodguard.wsgi:application

[Install]
WantedBy=multi-user.target
